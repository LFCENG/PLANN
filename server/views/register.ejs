<% layout('layout_auth') -%>     
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-12 col-xs-12 signUpBox">
      <div class="col-md-6 col-sm-6 col-xs-12 formInfo">
        <h2>Sign up</h2>
        <form class="m-t" action="/register" method="post">
          <div class="form-group">
            <input type="email" class="form-control" placeholder="Email" name="username">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" name="password">
          </div>
          
          
          <% if (msg && msg.length > 0 ) { %>
          <p class="text-sm-center text-danger"> <%= msg[0]  %> </p>
          <% } %>
          <button type="submit" class="btn btn-success w-full p-y-xs">SIGN UP</button>
        </form>
        <div class="social-authentication">
          <div class="m-t form-break">
            <div></div><div>OR</div><div></div>
          </div> 
          <div class="m-t">
            <a class="btn btn-block btn-social btn-google">
              <span class="fa fa-google"></span> Sign up with Google
            </a>
            <a class="btn btn-block btn-social btn-linkedin">
              <span class="fa fa-linkedin"></span> Sign up with Linked in
            </a>
          </div>    
            
        </div>
        <div class="m-t text-sm-center">
          Already have an account? <a href="/login">Login</a>
        </div>
      </div> <!-- End of Left signup box container -->
      <div class="hidden-xs col-md-6 col-sm-6 col-xs-12 no-padding rightInfoSignup">
        <img src="/img/Logo_color.svg" class="logo"></img>
        <h2 class="title">
          Project Management for Architects
        </h2>
      </div>
    </div> <!-- End of Signup box -->
  </div> <!-- End of Row -->
</div> <!-- End of Container -->

